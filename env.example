# =============================================================================
# ENTERPRISE POS SYSTEM - ENVIRONMENT CONFIGURATION
# =============================================================================

# Application Settings
APP_NAME=Enterprise POS System
APP_VERSION=1.0.0
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=enterprise_pos
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_TTL=3600

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Email Service (Gmail/SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SMS Service (Twilio)
TWILIO_SID=your-twilio-account-sid
TWILIO_TOKEN=your-twilio-auth-token
TWILIO_PHONE=+1234567890

# AI Services
AI_SERVICE_URL=http://localhost:8001
OPENAI_API_KEY=your-openai-api-key
AI_MODEL_VERSION=gpt-4

# E-commerce Platform APIs
SHOPEE_API_KEY=your-shopee-api-key
SHOPEE_API_SECRET=your-shopee-api-secret
SHOPEE_SHOP_ID=your-shopee-shop-id

LAZADA_API_KEY=your-lazada-api-key
LAZADA_API_SECRET=your-lazada-api-secret
LAZADA_SELLER_ID=your-lazada-seller-id

TIKI_API_KEY=your-tiki-api-key
TIKI_API_SECRET=your-tiki-api-secret
TIKI_SELLER_ID=your-tiki-seller-id

# Payment Gateways
VNPAY_TMN_CODE=your-vnpay-terminal-code
VNPAY_HASH_SECRET=your-vnpay-hash-secret
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html

MOMO_PARTNER_CODE=your-momo-partner-code
MOMO_ACCESS_KEY=your-momo-access-key
MOMO_SECRET_KEY=your-momo-secret-key
MOMO_ENDPOINT=https://test-payment.momo.vn

ZALOPAY_APP_ID=your-zalopay-app-id
ZALOPAY_KEY1=your-zalopay-key1
ZALOPAY_KEY2=your-zalopay-key2
ZALOPAY_ENDPOINT=https://sb-openapi.zalopay.vn

# Hardware Integration
PRINTER_IP=192.168.1.100
PRINTER_PORT=9100
CASH_DRAWER_PORT=COM3
BARCODE_SCANNER_PORT=COM4
SCALE_IP=192.168.1.101

# File Storage
STORAGE_TYPE=local
STORAGE_PATH=./uploads
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_BUCKET=your-s3-bucket

# Monitoring & Logging
LOG_LEVEL=info
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
ELASTICSEARCH_URL=http://localhost:9200

# Security
CORS_ORIGIN=http://localhost:5173
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
BCRYPT_ROUNDS=12

# Feature Flags
ENABLE_GAMIFICATION=true
ENABLE_AI_FEATURES=true
ENABLE_MULTI_STORE=true
ENABLE_MOBILE_APP=true
ENABLE_ANALYTICS=true

# Development Settings
DEBUG=false
MOCK_PAYMENTS=true
MOCK_HARDWARE=true
SEED_DATA=true 