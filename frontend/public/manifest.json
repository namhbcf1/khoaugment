{
  "name": "Kho Augment - Smart POS System",
  "short_name": "KhoAugment",
  "description": "Advanced Point of Sale and Inventory Management System with AI-powered features",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#1677ff",
  "orientation": "any",
  "scope": "/",
  "lang": "vi",
  "dir": "ltr",
  "prefer_related_applications": false,
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
