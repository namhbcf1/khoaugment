# Production Environment Variables
# Khochuan POS - Trường Phát Computer Hòa Bình
# 100% REAL API - NO MOCK DATA

# API Configuration
VITE_API_URL=https://khoaugment-api.namhbcf1.workers.dev
VITE_APP_NAME=Khochuan POS
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Enterprise Point of Sale System

# Company Information
VITE_COMPANY_NAME=Trường Phát Computer Hòa Bình
VITE_COMPANY_ADDRESS=123 Đường Trường Phát, Hòa Bình, Việt Nam
VITE_COMPANY_PHONE=+84-123-456-789
VITE_COMPANY_EMAIL=info@truongphat.com
VITE_COMPANY_WEBSITE=https://khoaugment.pages.dev

# Environment
VITE_NODE_ENV=production
VITE_BUILD_MODE=production
VITE_DEBUG=false

# Features
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_GAMIFICATION=true
VITE_ENABLE_BARCODE_SCANNER=true
VITE_ENABLE_RECEIPT_PRINTER=true

# API Features
VITE_USE_MOCK_API=false
VITE_API_TIMEOUT=15000
VITE_API_RETRY_ATTEMPTS=3
VITE_API_CACHE_TTL=300000

# Security
VITE_ENABLE_HTTPS=true
VITE_SECURE_COOKIES=true
VITE_SESSION_TIMEOUT=86400000

# Performance
VITE_ENABLE_COMPRESSION=true
VITE_ENABLE_CACHING=true
VITE_LAZY_LOADING=true

# Cloudflare
VITE_CF_ANALYTICS_TOKEN=your-cf-analytics-token
VITE_CF_ZONE_ID=your-cf-zone-id

# Sentry (Error Tracking)
VITE_SENTRY_DSN=your-sentry-dsn
VITE_SENTRY_ENVIRONMENT=production

# Google Analytics
VITE_GA_TRACKING_ID=your-ga-tracking-id

# Payment Gateways
VITE_VNPAY_MERCHANT_ID=your-vnpay-merchant-id
VITE_MOMO_PARTNER_CODE=your-momo-partner-code
VITE_ZALOPAY_APP_ID=your-zalopay-app-id

# Notification Services
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_PROJECT_ID=your-firebase-project-id

# File Upload
VITE_CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
VITE_MAX_FILE_SIZE=5242880

# Localization
VITE_DEFAULT_LANGUAGE=vi
VITE_SUPPORTED_LANGUAGES=vi,en
VITE_DEFAULT_CURRENCY=VND
VITE_DEFAULT_TIMEZONE=Asia/Ho_Chi_Minh

# Business Rules
VITE_DEFAULT_TAX_RATE=10
VITE_LOYALTY_POINTS_RATE=1000
VITE_LOW_STOCK_THRESHOLD=5
VITE_MAX_DISCOUNT_PERCENT=50

# UI/UX
VITE_THEME_PRIMARY_COLOR=#1890ff
VITE_THEME_SUCCESS_COLOR=#52c41a
VITE_THEME_WARNING_COLOR=#faad14
VITE_THEME_ERROR_COLOR=#ff4d4f
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100
